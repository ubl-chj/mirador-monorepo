{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },
    "declaration": true,
    "module": "commonjs",
    "target": "esnext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "lib",
    "inlineSources" : true,
    "sourceMap": true,
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noUnusedParameters":true,
    "noImplicitUseStrict":true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports":true,
    "jsx": "react",
    "lib": [
      "es5",
      "es6",
      "dom",
      "es2015.core",
      "es2015.collection",
      "es2015.generator",
      "es2015.iterable",
      "es2015.promise",
      "es2015.proxy",
      "es2015.reflect",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "esnext.asynciterable"
    ],
    "types": [
      "node", "jest", "jest-fetch-mock"
    ],
    "typeRoots": [
      "node_modules/**/types",
      "node_modules/@types",
      "./src/@types",
      "./src/types"
    ]
  },
  "exclude": [
    "node_modules",
    "./src/**/__test__/*",
    "./src/**/*.unit.tsx?"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
